#navbar.navbar.navbar-default
  #navbar-container.navbar-container
    .navbar-header.pull-left
      %a.navbar-brand{href: "/"}
        %small
          %i.fa.fa-coffee
          Dejeuner
      / /.brand
    / /.navbar-header
    .navbar-header.pull-right{role: "navigation"}
      %ul.nav.ace-nav
        - if params[:controller] == 'static_pages'
          %li.red
            = link_to "About", '/about'
          %li.red
            = link_to "Pricing", '/pricing'
        - if current_user
          %li.red
            %a.dropdown-toggle{"data-toggle" => "dropdown", href: "#"}
              %span.user-info
                %small Welcome,
                Jason
              %i.fa.fa-caret-down
            %ul.user-menu.pull-right.dropdown-menu.dropdown-yellow.dropdown-caret.dropdown-close
              %li 
                %a{:href => "/"} 
                  %i.fa.fa-home
                  Home page
              %li 
                %a{:href => "/main"}
                  %i.fa.fa-dashboard 
                  Dashboard 
              %li
                %a{href: "/profile"}
                  %i.fa.fa-user
                  Profile
              %li.divider
              %li
                = link_to destroy_user_session_path, method: 'delete' do 
                  %i.fa.fa-off
                  Logout
        - else 
          %li.red
            = link_to new_user_registration_path do 
              Sign Up 
          %li.red
            = link_to new_user_session_path do 
              Sign In