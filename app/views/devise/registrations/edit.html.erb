<div class="container">
    <div class="row">
      <div class="col-lg-12">
        <div class="form-sign">

        <h2>Edit <%= resource_name.to_s.humanize %></h2>

        <%= form_for(resource, :as => resource_name, :url => registration_path(resource_name), :html => { :method => :put }, :class => "form") do |f| %>
          <%= devise_error_messages! %>

         <%= f.email_field :email, :class => "input input-lg form-control", :autofocus =>true, :placeholder => "Email" %>

         <%= f.text_field :name, :class => "input input-lg form-control", :placeholder => "Name" %>

         <%= f.text_field :restaurant, :class => "input input-lg form-control", :placeholder => "Restaurant" %>


          <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
            <div>Currently waiting confirmation for: <%= resource.unconfirmed_email %></div>
          <% end %>

          <%= f.password_field :password, :autocomplete => "off", :class => "input input-lg form-control", :placeholder => "Password (Leave blank if you don't want to change)" %>

          <%= f.password_field :password_confirmation, :class => "input input-lg form-control", :placeholder => "New password confirm"%>

         <%= f.label :current_password %> <i>(we need your current password to confirm your changes)</i><br />
          <%= f.password_field :current_password, :class => "input input-lg form-control", :placeholder => "Current Password" %>

    <div><%= f.submit "Update", :class => "btn btn-lg btn-primary margin-top" %></div>
        <% end %>

        <h3>Cancel my account</h3>

        <p>Unhappy? <%= button_to "Cancel my account", registration_path(resource_name), :data => { :confirm => "Are you sure?" }, :method => :delete, :class => "btn btn-lg btn-danger" %></p>

        <%= link_to "Back", :back %>
</div>
</div>
</div>
</div>
