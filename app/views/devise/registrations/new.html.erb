<div class="container">
  <div class="form-sign">
    <h1>Sign up</h1>

    <%= form_for(resource, :as => resource_name, :url => registration_path(resource_name)) do |f| %>
      <%= devise_error_messages! %>

      <div><%= f.label :email %><br />
      <%= f.email_field :email, :autofocus => true, :class => 'input-lg' %></div>

      <div><%= f.label :full_name %><br />
      <%= f.text_field :name, :class => 'input-lg' %></div>

      <div><%= f.label :restaurant_name %><br />
      <%= f.text_field :restaurant, :class => 'input-lg' %></div>

      <div><%= f.label :password %><br />
      <%= f.password_field :password, :class => 'input-lg' %></div>

      <div><%= f.label :password_confirmation %><br />
      <%= f.password_field :password_confirmation, :class => 'input-lg' %></div>

      <div><%= f.submit "Sign up", :class => "btn btn-success btn-lg" %></div>
    <% end %>

    <%= render "devise/shared/links" %>

  </div>
</div>