<div class="container">
  <div class="form-sign">
    <h1>Sign up</h1>

    <%= form_for(resource, :as => resource_name, :url => registration_path(resource_name)) do |f| %>
      <%= devise_error_messages! %>

      <%= f.email_field :email, :autofocus => true, :placeholder => "Email",  :class => 'input-lg form-control' %>

      <%= f.text_field :name,:placeholder => "Name", :class => 'input-lg form-control' %>

      <%= f.text_field :restaurant, :placeholder => "Restaurant", :class => 'input-lg form-control' %>

      <%= f.password_field :password, :placeholder => "Password", :class => 'input-lg form-control' %>
      <%= f.password_field :password_confirmation, :placeholder => "Password Confirmation", :class => 'input-lg form-control' %>

      <div><%= f.submit "Sign up", :class => "btn btn-success btn-lg" %></div>
    <% end %>

    <%= render "devise/shared/links" %>

  </div>
</div>