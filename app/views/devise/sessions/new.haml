= render 'layouts/header'
= render 'shared/flash'
.main-container
  .main-content
    .row
      .col-sm-9.col-sm-offset-1
        .login-container
          .position-relative
            #login-box.login-box.visible.widget-box.no-border
              .widget-body
                .widget-main
                  %h4.header.blue.lighter.bigger
                    %i.fa.fa-coffee.green
                    Please Enter Your Information
                  .space-6
                  = form_for(resource, :as => resource_name, :url => session_path(resource_name)) do |f| 
                    %fieldset
                      %label.block.clearfix
                        = f.email_field :email, :autofocus => true,:placeholder => "Email", :class => 'input-lg form-control' 
                      %label.block.clearfix
                        = f.password_field :password, :placeholder => "Password", :class => 'input-lg form-control' 
                      .space
                      .clearfix
                        %label.inline
                          = f.check_box :remember_me, class: 'ace'
                          %span.lbl Remember Me
                          %input.ace{:type => "checkbox"}/
                        = f.submit 'Login', class: 'width-35 pull-right btn btn-sm btn-primary'
                      .space-4
                / /widget-main
                .toolbar.clearfix
                  %div
                    = link_to "I forgot my password", new_user_password_path, class: 'forgot-password-link'
                  %div
                    = link_to "I want to register", new_user_registration_path, class: 'user-signup-link'
              / /widget-body
            / /login-box
          / /position-relative
      / /.col
    / /.row
