<div class="container">
  <div class="form-sign">


  <h1>Sign in</h1>

  <%= form_for(resource, :as => resource_name, :url => session_path(resource_name)) do |f| %>
    <%= f.email_field :email, :autofocus => true,:placeholder => "Email", :class => 'input-lg form-control' %>

    <%= f.password_field :password, :placeholder => "Password", :class => 'input-lg form-control' %>

    <% if devise_mapping.rememberable? -%>
      <div><%= f.check_box :remember_me %> <%= f.label :remember_me, :class => 'input-lg' %></div>
    <% end -%>

    <div><%= f.submit "Sign in", :class => 'btn btn-lg btn-success' %></div>
  <% end %>

  <%= render "devise/shared/links" %>
  </div>
</div>
