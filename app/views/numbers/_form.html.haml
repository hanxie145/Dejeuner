= form_for @number do |f|
  - if @number.errors.any?
    #error_explanation
      %h2= "#{pluralize(@number.errors.count, "error")} prohibited this number from being saved:"
      %ul
        - @number.errors.full_messages.each do |msg|
          %li= msg

  .field
    = f.label :number
    = f.number_field :number
  .field
    = f.label :user_id
    = f.number_field :user_id
  .actions
    = f.submit 'Save'
