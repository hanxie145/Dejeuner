.container 
  .row 
    .form-sign
      = form_for(@campaign) do |f|
        = f.label :description 
        = f.text_area :description, :autofocus => true, :class => "input input-lg"
        = f.radio_button(:campaign_type, "Feedback")
        = f.label(:campaign_type, "Feedback")
        = f.radio_button(:campaign_type, "Competition")
        = f.label(:campaign_type, "Competition")

        / = f.select(:feedback, :competition)
        = f.submit "Make a new campaign", :class => 'btn btn-lg btn-success'
